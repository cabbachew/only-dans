<h1 class="font-bold text-4xl mb-5">Posts</h1>

<% @posts.each do |post| %>
  <div class="bg-white shadow rounded-lg p-5 mb-5">
    <h2 class="font-bold text-2xl"><%= post.body %></h2>
    <p class="text-gray-600">by <%= post.user.full_name %></p>
  </div>
<% end %>

<%= link_to "New Post", new_post_path, class: "w-max bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
