<h1 class="font-bold text-4xl mb-5">Edit Post</h1>

<%= form_with model: @post, class: "bg-white shadow rounded-lg p-5 mb-5" do |form| %>
  <div class="mb-5">
    <%= form.text_field :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Update Post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

<%= link_to "Delete Post", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "w-max bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>

<%= link_to "Back to Post", post_path(@post), class: "w-max bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>