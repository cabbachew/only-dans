<h1 class="font-bold text-4xl mb-5">Profile</h1>

<h3 class="font-bold text-2xl mb-5">User</h3>
<div class="bg-white shadow rounded-lg p-5 mb-5">
  <h2 class="font-bold text-2xl"><%= @user.full_name %></h2>
  <p class="text-gray-600">by <%= @user.email %></p>
</div>

<h3 class="font-bold text-2xl mb-5">Posts</h3>
<% @user.posts.each do |post| %>
  <div class="bg-white shadow rounded-lg p-5 mb-5">
    <h2 class="font-bold text-2xl"><%= post.body %></h2>
    <p class="text-gray-600">by <%= post.user.full_name %></p>
  </div>
<% end %>

