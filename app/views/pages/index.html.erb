<div class="flex grow">
  <div class="grow p-4">
    <h2 class="text-xl font-bold mb-4">Users</h2>
    <% @users.each do |user| %>
      <div class="bg-white shadow rounded-lg p-5 mb-5">
        <h2 class="font-bold text-2xl"><%= user.full_name %></h2>
        <p class="text-gray-600">by <%= user.email %></p>
      </div>
    <% end %>
  </div>
  <div class="grow p-4">
    <h2 class="text-xl font-bold mb-4">Posts</h2>
    <%= turbo_frame_tag "posts", src: posts_path %>
  </div>
</div>