<div class="flex">
  <div class="flex grow w-1/2">
    <%= image_tag "login_graphic.png", size: "360", class: "m-auto rounded-3xl" %>
  </div>
  <div class="grow p-24 w-1/2">
    <h1 class="font-serif text-4xl tracking-wider mb-16">only|dans</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-full max-w-sm"}) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "hidden block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, placeholder: "email", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "hidden block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password, placeholder: "password", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6">
          <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="flex items-center justify-between">
        <%= f.submit "Log in", class: "bg-slate-500 hover:bg-slate-700 text-white font-bold py-2 px-4 rounded-full" %>
      </div>
    <% end %>
    <hr class="my-8 border-gray-300">
    <div class="mt-4 underline-0 hover:underline hover:underline-offset-4">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-gray-700" %>
    </div>
    <div class="mt-4 underline-0 hover:underline hover:underline-offset-4">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm text-gray-700" %>
    <%# render "devise/shared/links" %>
  </div>
</div>


